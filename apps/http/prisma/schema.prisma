// Prisma Schema for Meeting Booking System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MeetingStatus {
  DRAFT
  CONFIRMED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  name      String
  username  String   @unique
  email     String?  @unique
  createdAt DateTime @default(now())   // Fix: Add email
  
  // Relations
  createdMeetings Meeting[] @relation("CreatorMeetings")
  bookedSlots     TimeSlot[]
}

model Meeting {
  id           String        @id @default(uuid())
  title        String
  description  String?
  date         DateTime
  bookingToken String        @unique
  status       MeetingStatus @default(DRAFT)

  createdAt DateTime @default(now())

  // Creator relation
  createdById String
  createdBy   User @relation("CreatorMeetings", fields: [createdById], references: [id])

  // All availability slots
  slots TimeSlot[]
}

model TimeSlot {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime

  meetingId String
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  // Who booked this slot (if any)
  bookedById String?
  bookedBy   User?   @relation(fields: [bookedById], references: [id])

  bookedAt  DateTime?
  createdAt DateTime @default(now())

  @@unique([meetingId, startTime])
  @@index([meetingId])
}
